<h1><%= @course.title %></h1>
<h2><%= @section.title %></h2>

<% if @course.sections.any? %>
  <h4>Here are the lessons for this section:</h4>

  <ul>
    <% @section.lessons.each do |lesson| %>
      <li>
        (<%= lesson.day %>) <%= link_to lesson.title, lesson_path(lesson) %> /
        <%= link_to "Edit", edit_lesson_path(lesson) %> /
        <%= link_to "Delete", lesson_path(lesson),
                               :data => {:confirm => "Are you sure?",
                                              :method => "delete"} %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>There are no sections yet!</p>
<% end %>

<p><%= link_to @course.title, course_path(@course.id) %></p>
